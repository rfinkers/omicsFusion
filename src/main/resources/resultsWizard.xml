<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="summaryResults" namespace="/results" extends="struts-default">
        <action name="summaryResults" class="nl.wur.plantbreeding.omicsfusion.results.RetrieveResultsSummaryAction">
            <result name="input">/results/showResultsSummary.jsp</result>
            <result name="error">/results/showResultsSummary.jsp</result>
            <result name="success">/results/resultsSummary.jsp</result>
        </action>
    </package>
    <package name="charts" namespace="/results" extends="struts-default, jfreechart-default">
        <action name="predRespXYScatter">
            <result>/results/predRespXYScatter.jsp</result>
        </action>
        <action name="chart" class="nl.wur.plantbreeding.omicsfusion.results.PredictorResponseXYScatterAction">
            <result type="chart">
                <param name="width">750</param>
                <param name="height">500</param>
            </result>
        </action>
    </package>
</struts>
